  <ItemGroup>
    <Compile Update="Resources\InternalApps.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>InternalApps.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\InternalApps.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>InternalApps.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>

		<None Include="Goals\**\*" Exclude="**\.db\**\*.*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
  </ItemGroup>


  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="echo &quot;Building plang code&quot;&#xD;&#xA;&#xD;&#xA;cd &quot;$(ProjectDir)Goals&quot; &amp;&amp; plang build &gt; output.txt&#xA;&#xA;type output.txt&#xA;&#xA;findstr /C:&quot;Failed to build&quot; output.txt&#xA;set BuildError=%25errorlevel%25&#xA;&#xA;if %25BuildError%25 equ 0 (&#xA;  exit 1&#xA;)&#xA;exit 0" />
  </Target>

</Project>
